{
  "name": "verso",
  "version": "1.0.0",
  "main": "server/server.js",
  "scripts": {
    "lint": "eslint .",
    "start": "sudo pm2 start ecosystem.config.js --update-env",
    "stop": "sudo pm2 delete verso",
    "start-staging": "sudo pm2 start ecosystem.config.js --name verso-staging --env staging --update-env",
    "stop-staging": "sudo pm2 delete verso-staging",
    "mongo": "sudo service mongodb start && sudo pm2 start ecosystem.config.js --env mongo --update-env",
    "dev": "node .",
    "posttest": "npm run lint && nsp check"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.0.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.5.2",
    "dotenv": "^5.0.1",
    "helmet": "^3.20.0",
    "inquirer": "^6.2.0",
    "ldtr": "^0.2.1",
    "loopback": "^3.26.0",
    "loopback-boot": "^2.6.5",
    "loopback-component-explorer": "^6.4.0",
    "loopback-component-passport": "^3.10.0",
    "loopback-connector-mongodb": "^3.4.3",
    "loopback-ds-readonly-mixin": "^2.0.4",
    "marklogic": "^1.0.6",
    "passport-ldapauth": "^2.1.0",
    "requestretry": "^2.0.2",
    "serve-favicon": "^2.0.1",
    "strong-error-handler": "^2.0.0",
    "x2js": "^3.2.1"
  },
  "devDependencies": {
    "eslint": "^4.18.2",
    "eslint-config-loopback": "^8.0.0",
    "nsp": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lcnetdev/verso.git"
  },
  "license": "CC0-1.0",
  "description": "verso",
  "author": "kirkhess"
}
